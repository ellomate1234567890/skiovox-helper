// background/redirect.js

// The URL you want to intercept
const targetUrl = "https://www.google.com/*";  

// The extension page to show instead
const redirectPage = chrome.runtime.getURL("new-tab/main.html");

// Listen for requests to the target URL and redirect them
chrome.webRequest.onBeforeRequest.addListener(
  (details) => {
    return { redirectUrl: redirectPage };
  },
  { urls: [targetUrl] }, 
  ["blocking"]
);
